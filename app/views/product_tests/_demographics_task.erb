<%= f.form_group :primary_filter, label: { text: "Primary Filter" } do %>
  <% task.filters.each do |filter| %>
    <%= f.radio_button :primary_filter, filter, label: "#{filter.capitalize}" %>
  <% end %>
<% end %>

<%= f.form_group :secondary_filter, label: { text: "Secondary Filter" } do %>
  <% task.filters.each do |filter| %>
    <%= f.radio_button :secondary_filter, filter, label: "#{filter.capitalize}"  %>
  <% end %>
<% end %>
