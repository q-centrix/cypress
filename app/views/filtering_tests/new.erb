<div class="panel panel-default">
<div class="panel-heading"><h1>Filter Test</h1></div
  
<%= bootstrap_nested_form_for [@product, @filtering_test], :url => { :controller => 'filtering_tests', :action => 'create' } do |f| %>
  <div class="panel-body">
    <div class="row">
    <%= f.fields_for :tasks do |task_form| %>
      <div class="col-md-3">
        <h3>Task <%=task_form.index()+1 %>: <%=task_form.object.class.to_s.underscore.split("_")[0].capitalize%></h3>
        <%= render partial: task_form.object.class.to_s.underscore, locals: {task: task_form.object, f: task_form} %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="panel-footer">
    <div class="pull-left">
      <%= f.submit "Generate", class: "btn btn-success" %>
    </div>
    <div class="clearfix"></div>
  </div>
<% end %>
</div>
